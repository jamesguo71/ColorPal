<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context=".views.activities.EditActivity">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/swatches_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:id="@+id/color_hex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="#000000"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="H"
                android:textSize="16sp"
                />
            <SeekBar
                android:id="@+id/H_slider"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="360" />
            <TextView
                android:id="@+id/H_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="16sp"
                />
            <SeekBar
                android:id="@+id/S_slider"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="100"/>
            <TextView
                android:id="@+id/S_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="16sp"
                />
            <SeekBar
                android:id="@+id/Br_slider"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="100" />
            <TextView
                android:id="@+id/Br_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="R"
                android:textSize="16sp"
                />
            <SeekBar
                android:id="@+id/R_slider"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255" />
            <TextView
                android:id="@+id/R_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="G"
                android:textSize="16sp"
                />
            <SeekBar
                android:id="@+id/G_slider"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255" />
            <TextView
                android:id="@+id/G_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="16sp"
                />
            <SeekBar
                android:id="@+id/B_slider"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255" />
            <TextView
                android:id="@+id/B_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        style="@style/Theme.ColorPal"
        android:id="@+id/edit_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_bottom_edit" />
</FrameLayout>